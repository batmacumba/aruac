const https = require('https');
const path = require('path');
const fs = require('fs');
const express = require('express');

/**
 * HTTPS
 */
const key = fs.readFileSync('/etc/letsencrypt/live/aruacfilmes.com.br/privkey.pem');
const cert = fs.readFileSync('/etc/letsencrypt/live/aruacfilmes.com.br/cert.pem');

var options = {
    key: key,
    cert: cert,
};

var app = require('../server/server');

const port = process.env.PORT || 443;
const server = https.createServer( options, app );
server.listen( port, function () {
    console.log( 'App escutando a porta ' + server.address().port );
});


/**
 * HTTP: redireciona para HTTPS
 */
var http = express();

http.get('*', function(req, res) {
    res.redirect('https://' + req.headers.host + req.url);
})

http.listen(80);
